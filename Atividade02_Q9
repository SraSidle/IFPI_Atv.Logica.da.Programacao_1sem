//Leia 2 números (A, B) e escreva-os em ordem inversa (B, A).

console.clear();
const prompt = require ('prompt-sync')();

  let numero = prompt('adicione 1 número de 2 dígitos. '); // pede os números como string
  let numeros = numero.split(''); //usa esse recurso que separará cada caractere (split)

  let num1 = numeros[0]; //os caracteres serão colocados dentro de um array, ainda como string
  let num2 = numeros[1]; 

console.log(`A inversão do número ${numero}, é igual ${num2 + num1}.`) // não será necessário transformar em numero
  //porque a concatenação dos valores como strings é mais ideal para resolver o problema da questão